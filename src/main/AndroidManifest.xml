<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itarato.hawkandroidclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity android:name=".ContentListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.itarato.hawkandroidclient.CONTENT"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ContentViewSliderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.itarato.hawkandroidclient.CONTENT"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AppSettingsActivity">
            <intent-filter>
                <action android:name=".AppSettingsActivity" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
    </application>

</manifest>